CC = gcc
CFLAGS = -O3 -Wall 
LFLAGS = -pthread -lm
INCDIR = $(ROOT)/include/
OBJ = linked_list.o particle.o simulate.o count_cores.o output.o simulate_rdme.o binheap.o pthread_barrier.o


.PHONY: all 

all: ssa_sdpd

main.o: 
	$(CC) -c -o main.o $(MODEL) -I$(INCDIR) $(CFLAGS)

ssa_sdpd: $(OBJ) main.o
	$(CC)  -o ssa_sdpd $(OBJ) main.o $(LFLAGS)


%.o: $(ROOT)/src/%.c
	$(CC) -c -o $@ $< -I$(INCDIR) $(CFLAGS)
